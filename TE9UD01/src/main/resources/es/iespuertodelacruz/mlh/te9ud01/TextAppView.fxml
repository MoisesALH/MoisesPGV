<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="mainLayout" spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="es.iespuertodelacruz.mlh.te9ud01.TextAppController">
    <MenuBar>
        <Menu text="Archivo">
            <MenuItem fx:id="abrirMenuItem" text="Abrir" />
            <MenuItem fx:id="guardarMenuItem" text="Guardar" />
        </Menu>
        <Menu text="Ayuda">
        </Menu>
    </MenuBar>

    <TextArea fx:id="textArea" prefHeight="200" editable="false"/>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="textField" prefWidth="300"/>
        <Button fx:id="sendButton" text="Enviar" onAction="#enviarTexto"/>
    </HBox>

</VBox>
